{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components": ["client"],
      "@shared": ["shared"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "client/**/*.js",
    "client/**/*.ts",
    "client/**/*.jsx",
    "client/**/*.tsx",
    "pages/**/*.js",
    "pages/**/*.ts",
    "pages/**/*.jsx",
    "pages/**/*.tsx",
    "shared/**/*.js",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./server/**/__tests__/",
    "../server/dist",
    "cypress"
  ]
}
